<h1>Image Collections</h1>

<table class="table table-responsive table-condensed table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @image_collections.each do |image_collection| %>
    <tr>
      <td><%= image_collection.name %></td>
      <td><%= link_to 'Show', image_collection %></td>
      <td><%= link_to 'Edit', edit_image_collection_path(image_collection) %></td>
      <td><%= link_to 'Destroy', image_collection, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Image Collection', new_image_collection_path %>
