<h1>Images</h1>

<table class="table table-responsive table-condensed table-striped">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @images.each do |image| %>
    <tr>
      <td><%= image.name %></td>
      <td align="left" witdh="60%">
        <%= link_to image, class: "btn btn-success btn-sm" do %>
          <%= fa_icon "eye", text: "Ver" %>
        <% end %>
        <%= link_to edit_image_path(image), class: "btn btn-warning btn-sm" do %>
          <%= fa_icon "edit", text: "Editar" %>
        <% end %>
        <%= link_to image, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" do %>
          <%= fa_icon "close", text: "Excluir" %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Enviar Anexos', new_image_path, class: "btn btn-primary" %>
